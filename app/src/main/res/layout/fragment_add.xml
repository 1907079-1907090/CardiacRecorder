<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/a_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Patient Name"
                android:background="@color/transparent"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/a_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="Date"
                android:inputType="date"
                android:minHeight="48dp"
                android:padding="5dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/a_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:ems="10"
                android:hint="Time"
                android:inputType="time"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:id="@+id/a_sys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:ems="10"
                android:hint="Systolic Pressure"
                android:inputType="number"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:id="@+id/a_dias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:ems="10"
                android:hint="Diastolic Pressure"
                android:inputType="number"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">
            <EditText
                android:id="@+id/a_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:ems="10"
                android:hint="Heart Rate"
                android:inputType="number"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:id="@+id/a_comm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:minHeight="48dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>